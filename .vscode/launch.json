    "version": "0.2.0",
    "configurations": [

        {
            "name": "Simple Training",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/launch.py",
            "console": "integratedTerminal",
            "env": {
                "CUDA_VISIBLE_DEVICES": "0"
            },
            "justMyCode": false,
            "args": [
                "--config", "configs/dge.yaml",
                "--train",
                "data.source=\"data/dge_data/face\"",
                "system.gs_source=\"data/dge_data/face/scene_point_cloud.ply\"",
                "system.prompt_processor.prompt=\"detailed face, sunshine, indoor, warm atmosphere\"",
                // "system.prompt_processor.prompt=\"Let the sunlight shine on the man's face\"",   
            ]
        },
        {
            "name": "Current file",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "CUDA_VISIBLE_DEVICES": "0"
            },
            "justMyCode": false,
            "args": [
            ]
        }
    ]
}