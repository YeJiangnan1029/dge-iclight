    "version": "0.2.0",
    "configurations": [

        {
            "name": "Simple Training",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/launch.py",
            "console": "integratedTerminal",
            "env": {
                "CUDA_VISIBLE_DEVICES": "0"
            },
            "justMyCode": false,
            "args": [
                "--config", "configs/dge.yaml",
                "--train",
                "exp_root_dir=\"output/dge_iclight_output\"",
                "data.source=\"data/in2n/person-small\"",
                "data.exp_folder=\"output/3dgs_output/in2n/person-small/splatfacto/exp\"",
                "system.gs_source=\"output/3dgs_output/in2n/person-small/splatfacto/exp/nerfstudio_models/splat.ply\"",
                "system.cache_dir=\"output/3dgs_output/in2n/person-small/splatfacto/exp/cache\"",
                "system.prompt_processor.prompt=\"detailed portrait, cold tune, bule stage lighting from top\"",
                "system.guidance_type=\"dge-iclight\"",
                "name=\"dge-iclight-person-pam\"",
                "system.ref_id=\"64\"",
                "data.max_view_num=\"30\""
            ]
        },
        {
            "name": "Current file",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "CUDA_VISIBLE_DEVICES": "0"
            },
            "justMyCode": false,
            "args": [
            ]
        }
    ]
}